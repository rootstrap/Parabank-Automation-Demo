{
	"name": "playwright-mcp-demo",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"test": "playwright test",
		"test:headed": "playwright test --headed",
		"test:debug": "playwright test --debug",
		"test:report": "playwright test --reporter=html",
		"test:ui": "playwright test --ui",
		"test:e2e": "playwright test tests/registration/registration-e2e.test.ts --headed --grep \"Signup → Logout → Login$\"",
		"test:e2e-debug": "playwright test tests/registration/registration-e2e.test.ts --debug --grep \"Signup → Logout → Login$\"",
		"test:e2e-all": "playwright test tests/registration/registration-e2e.test.ts --headed --grep \"Open New Account\"",
		"test:e2e-all-debug": "playwright test tests/registration/registration-e2e.test.ts --debug --grep \"Open New Account\"",
		"test:e2e-separated": "playwright test tests/complete-e2e.test.ts --headed",
		"test:e2e-separated-debug": "playwright test tests/complete-e2e.test.ts --debug",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"type-check": "tsc --noEmit",
		"quality": "npm run lint && npm run format:check && npm run type-check"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@playwright/test": "^1.53.1",
		"@types/node": "^24.0.3",
		"@typescript-eslint/eslint-plugin": "^8.41.0",
		"@typescript-eslint/parser": "^8.41.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"prettier": "^3.6.2"
	}
}
